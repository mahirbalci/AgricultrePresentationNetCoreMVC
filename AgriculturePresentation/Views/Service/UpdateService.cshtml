@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Hizmet Kaydı Güncelle</h4>

                  <form class="forms-sample" method="post">
                      @Html.HiddenFor(x=>x.ServiceId)
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>

                    <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    </div>

                    <div class="form-group">
                      <label for="exampleInputEmail3">Görsel</label>
                      <input type="text" class="form-control" asp-for="Image" placeholder="Görsel">
                    </div>


                    
                    <button type="submit" class="btn btn-outline-success">Güncelle</button>

                  </form>
                </div>
              </div>
            </div>
