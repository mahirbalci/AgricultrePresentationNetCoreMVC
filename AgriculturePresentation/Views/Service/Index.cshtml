@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
       <div class="card">
              <div class="card-body">
                 <h4 class="card-title">Hizmet Listesi</h4>



                     <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Resim </th>
                                <th>Sil </th>
                                <th>Güncelle</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.ServiceId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Image</td>
                                    <td><a href="Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="Service/UpdateService/@item.ServiceId" class="btn btn-outline-info">Güncelle</a></td>

                                </tr>
                            }

                               
                        </table>
                     </div>
                      <a href="Service/AddService/" class="btn btn-outline-warning  mt-2">Yeni Servis Ekle</a>
                 </div>
    </div>
</div>



