@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count==0)
{   
         <div class="alert alert-danger" role="alert">

                    <h2 class="mb-2">Duyur Listesinde Herhani Bir Duyuru Bulunamamıştır!</h2>
                        <a href="/Announcement/AddAnnouncement" class="btn alert-info"> Yeni Duyuru Ekle</a>

                </div>
}

else{
<div class="col-lg-12 grid-margin stretch-card">
       <div class="card">
              <div class="card-body">
                 <h4 class="card-title">Duyuru Listesi</h4>



                     <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Tarih </th>
                                <th>Sil </th>
                                <th>Güncelle</th>
                                <th>Durum</th>
                                
                            </tr>
                    @foreach (var item in Model)
                    {
                                    <tr>

                                        <td>@item.AnnouncementId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Date</td>
                                        
                                        <td><a href="Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-info">Güncelle</a></td>

                                        @if (item.Status==true)
                                {
                                    <td><a href="Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                }
                                else
                                {
                                                <td><a href="Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn btn-outline-info">Aktif Yap</a></td>
                                }
                                
                                         
                                    

                                       


                                              

                                    </tr>
                    }


                        </table>
                     </div>
                      <a href="Announcement/AddAnnouncement/" class="btn btn-outline-warning  mt-2">Yeni Duyuru Ekle</a>
                 </div>
    </div>
</div>

}

