@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Takım Personel Kaydı Güncelle</h4>

                  <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementId)
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>

                    <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" asp-for="Description" cols="30" rows="5"></textarea>

                    </div>

                    <div class="form-group">
                      <label for="exampleInputName1">Tarih</label>
                      <input type="date" class="form-control" asp-for="Date" placeholder="Tarih">
                    </div>

                    <button type="submit" class="btn btn-outline-success">Güncelle</button>

                  </form>
                </div>
              </div>
            </div>
