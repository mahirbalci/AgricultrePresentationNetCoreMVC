@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Mesaj Listesi</h4>

                      <div class="table-responsive">
                        <table class="table table-striped">
                          <thead>
                            <tr>
                                <th>Ad-Soyad</th>
                                <th>Mail</th>
                                <th>Tarih</th>                            
                                <th>Mesajı Gör</th>                            
                                <th>Sil</th>

                            </tr>

                          </thead>
                          <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                  <td>@item.Name</td>
                                  <td>@item.Mail</td>
                                  <td>@item.Date</td>
                                    <td><a href="/Contact/MessageDetails/@item.ContactId" class="btn btn-outline-success">Mesajı Gör</a></td>
                                  <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-secondary">Sil</a></td>




                                </tr>
                            }


                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
