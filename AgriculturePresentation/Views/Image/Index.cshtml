@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Resim Listesi</h4>
                 
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Başlık</th>
                          <th>Sil</th>
                          <th>Düzenle</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                        {
                            <tr>
                              <td class="py-1">
                                <img src="@item.ImageUrl" alt="image"/>
                              </td>
                              <td>@item.Title</td>
                              <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-primary">Sil</a></td>
                             <td><a href="/Image/UpdateImage/@item.ImageId" class="btn btn-warning">Güncelle</a></td>
                              
                            </tr>
                        }
                      </tbody>
                    </table>
                    <a href="/Image/AddImage/" class="btn btn-outline-primary mt-4" >Yeni Görsel Ekle</a>
                  </div>
                </div>
              </div>
            </div>


