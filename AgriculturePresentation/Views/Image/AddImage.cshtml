@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Resim Ekle</h4>

                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                      <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                      <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                        
                    <div class="form-group">
                      <label for="exampleInputEmail3">Görsel Url</label>
                      <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel Url">
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>


                    <button type="submit" class="btn btn-outline-primary">Ekle</button>

                  </form>
                </div>
              </div>
            </div>