@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Admin Listesi</h4>

                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Kullanıcı Adı</th>
                          <th>Şifre</th>
                          <th>Sil</th>
                          <th>Düzenle</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                  
                                  <td>@item.AdminId</td>
                                  <td>@item.Username</td>
                                  <td>@item.Password</td>
                                  <td><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-primary">Sil</a></td>
                                 <td><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-warning">Güncelle</a></td>

                                </tr>
                        }
                      </tbody>
                    </table>
                    <a href="/Admin/AddAdmin/" class="btn btn-outline-primary mt-4" >Yeni Admin Ekle</a>
                  </div>
                </div>
              </div>
            </div>


