@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count == 0)
{
            <div class="alert alert-danger" role="alert">

                    <h2 class="mb-2">Takım Listesinde hiçbir personel bulunamamıştır!</h2>
                <a href="/Team/AddTeam/" class="btn alert-info"> Yeni Takım Arkadaşı Ekle</a>

            </div>

}
else{
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Ekip</h4>
                 
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Görev</th>
                            <th>Facebook</th>
                            <th>Instagram</th>
                            <th>Twitter</th>
                            <th>WebSite</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>

                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                        {
                        <tr>
                          <td class="py-1">
                            <img src="@item.ImageUrl" alt="image"/>
                          </td>
                          <td>@item.TeamId</td>
                          <td>@item.PersonName</td>
                          <td>@item.Title</td>
                          <td>@item.FacebookUrl</td>
                          <td>@item.InstagramUrl</td>
                          <td>@item.TwitterUrl</td>
                          <td>@item.WebSiteUrl</td>
                          <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-secondary">Sil</a></td>
                          <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Düzenle</a></td>

                         
                          
                        </tr>
                        }
                        
                        
                      </tbody>
                    </table>

                        <a href="/Team/AddTeam/" class="btn btn-primary mt-4"> Yeni Takım Giriş</a>
                  </div>
                </div>
              </div>
            </div>
}