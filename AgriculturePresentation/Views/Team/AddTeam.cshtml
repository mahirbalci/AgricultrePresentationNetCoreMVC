@model EntityLayer.Concrete.Team

@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Hizmet Takım Arkadaşı Kaydı</h4>

                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label for="exampleInputName1">Adı Soyadı</label>
                      <input type="text" class="form-control" asp-for="PersonName" placeholder="Ad-Soyad">
                      <span asp-validation-for="PersonName" class="text-danger"></span>
                      
                    </div>

                      <div class="form-group">
                      <label for="exampleInputEmail3">Görev</label>
                      <input type="text" class="form-control" asp-for="Title" placeholder="Görev">
                      <span asp-validation-for="Title" class="text-danger"></span>
              
                    </div>

                      <div class="form-group">
                      <label for="exampleInputEmail3">Görsel Yolu</label>
                      <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel Yolu">
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      
                    </div>
                      <div class="form-group">
                      <label for="exampleInputEmail3">Facebook </label>
                      <input type="text" class="form-control" asp-for="FacebookUrl" placeholder="Facebook Linki Giriniz">
                     
                    </div>
                      <div class="form-group">
                      <label for="exampleInputEmail3">Instagram</label>
                      <input type="text" class="form-control" asp-for="InstagramUrl" placeholder="Instagram Linki Giriniz">
                    
                    </div>
                      <div class="form-group">
                      <label for="exampleInputEmail3">Twitter</label>
                      <input type="text" class="form-control" asp-for="TwitterUrl" placeholder="Twitter linki giriniz">
                    </div>
                  
                       <div class="form-group">
                      <label for="exampleInputEmail3">Web Site</label>
                      <input type="text" class="form-control" asp-for="WebSiteUrl" placeholder="Web Site linki giriniz">
                    </div>



                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>

                  </form>
                </div>
              </div>
            </div>
